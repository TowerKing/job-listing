<h2><%= @job.title %></h2>
<p><%= @job.description %></p>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>内容</th>
      <th>下载链接</th>
      <th>投递者</th>
      <th>投递时间</th>
    </tr>
  </thead>

  <tbody>
    <% @resumes.each do |resume| %>
      <tr>
        <td><%= resume.content %></td>
        <td>
          <% if resume.attachment_url %>
            <%= link_to("Download Resume", resume.attachment_url) %>
          <% else %>
            无附件
          <% end %>
        </td>
        <td><%= resume.user.email %></td>
        <td><%= resume.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
